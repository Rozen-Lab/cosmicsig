citHeader("To cite R package cosmicsig in publications use:")

citEntry(
  entry    = "Manual",
  title    = "cosmicsig: Mutational Signatures Data from COSMIC (the Catalogue of Somatic Mutations in Cancer)",
  author   = c(person("Steven", "Rozen"),
               person("Nanhai", "Jiang")),
  year     = "2021",
  note     = "R package version 1.0.4",
  textVersion = paste0("Rozen SG, Jiang NH (2021). ",
  "cosmicsig: Mutational Signatures Data from COSMIC (the Catalogue of Somatic Mutations in Cancer). ", "R package version 1.0.4.")
)
